                        {{#if rooms}}
                        {{#each rooms}}
                        {{#each devices}}
                        {{#ifCond deviceType '==' 'thermometer' }}
                        <h3>Temperature {{deviceName}}</h3>
                        <div class="graph_box">
                            <canvas id="temperature_chart" width="100%" height="100%"></canvas>
                            <br>
                        </div>
                        {{/ifCond}}
                        {{#ifCond deviceType '==' 'hsensor' }}
                        <h3>Humidity {{deviceName}}</h3>
