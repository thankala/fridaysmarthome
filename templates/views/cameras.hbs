    <script src="/js/scripts.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


    <meta name="viewport" content="width=device-width,initial-scale=1">
</head>

<body>
    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
    <nav id="top-bar">

        {{>menu}}

    </nav>

    <div class="content" style="background-color: #343434;">
        <div id="sidebar">
            {{>sidebar}}
        </div>
    </div>
    <div id="main">
        <div class='section_1'>

            <div class="cameras-container">
                <h2>Cameras</h2>
                <hr class="separator">
                <div class="camera_flexbox">
                    {{#if cameras}}
                    {{#each cameras}}
                    <div class="camera_box">
                        <h4>{{name}} {{longName}}</h4>

                    </div>
                    {{/each}}
                    {{/if}}
                    {{!-- <div class="camera_box">
                        <h4>Camera 2 - Maria's Bedroom</h4>
                    </div>
                    <div class="camera_box">
                        <h4>Camera 3 - Kitchen</h4>
                    </div>
                    <div class="camera_box">
                        <h4>Camera 4 - Garden</h4>
                    </div>
                    <!-- <div class="camera_box">
                        <h4>Camera 5</h4>
                    </div> --> --}}

                    <a href="/devices/add/?deviceType=camera&category=/cameras" class="camera_box">
                        <div>
                            <div class="group_elements">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                <h3 style="font-size:0.7em;">Add camera</h3>
                            </div>
                        </div>
                    </a>

                </div>


            </div>
            {{>footer_mini}}



        </div>

</body>

</html>