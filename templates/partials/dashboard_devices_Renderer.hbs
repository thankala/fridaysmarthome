{{#if rooms}}
{{#each rooms}}
<div class="room_container">
    <h3>{{roomLongName}}</h3>
    <p style="text-align: center;">{{roomName}}</p>
    <div class="room_inside">
        <!-- Lights-->
        {{#if devices}}
        <div class="device_section">
            <div class="device_container">
                {{#each devices}}
                {{#ifCond deviceType '==' 'light' }}
                <div class="device">
                    <i class="fa fa-lightbulb-o" aria-hidden="true"></i>
                    <p>Light {{deviceName}}</p>
                    <label class="switch">
                        <input type="checkbox" {{#if deviceState}} checked {{else}} unchecked {{/if}} id={{deviceID}}
                            onclick="stateChange(this)">
                        <span class="slider round"></span>
                    </label>
                </div>
                {{/ifCond}}
                {{/each}}
            </div>
        </div>

        <!-- Sockets-->
        <div class="device_section">
            <div class="device_container">
                {{#each devices}}
                {{#ifCond deviceType '==' 'socket'}}
                <div class="device">
                    <i class="fa fa-plug" aria-hidden="true"></i>
                    <p>Socket {{deviceName}}</p>
                    <label class="switch">
                        <input type="checkbox" {{#if deviceState}} checked {{else}} unchecked {{/if}} id={{deviceID}}
                            onclick="stateChange(this)">
                        <span class="slider round"></span>
                    </label>
                </div>
                {{/ifCond}}
                {{/each}}
            </div>
        </div>

        <!-- Miscellaneous-->
        <div class="device_section">
            <div class="device_container">
                {{#each devices}}
                {{#ifCond deviceType '==' 'thermometer'}}
                <div class="device">
                    <i class="fa fa-thermometer-three-quarters" aria-hidden="true"></i>
                    <p>Thermometer</p>
                    <p>{{deviceValue.data}} &#8451;</p>
                </div>
                {{/ifCond}}
                {{#ifCond deviceType '==' 'hsensor'}}
                <div class="device">
                    <i class="fa fa-tint" aria-hidden="true"></i>
                    <p>Humidity sensor</p>
                    <p>{{deviceValue.data}} %</p>
                </div>
                {{/ifCond}}
                {{#ifCond deviceType '==' 'rainsensor'}}
                <div class="device">
                    <i class="fa fa-cloud" aria-hidden="true"></i>
                    <p>Raindrop Sensor</p>
                    <p>{{deviceValue.data}}</p>
                </div>
                {{/ifCond}}
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>


</div>
{{/each}}
{{/if}}